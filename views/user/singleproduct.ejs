      }

      .main textarea{
        position: relative;
        top: 20px;
        left: 30%;
      }
      .main p{
        text-align: center;
        margin-top: 1px;
        font-size: 20px;
      }
      .main button{
        height: 30px;
        width: 20%;
        background-color: #fb8500;
        position: relative;
        top: 30px;
        left: 40%;
        border-radius: 5px;
        border: none;
      }
