<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        *{
            margin: 0;
            padding: 0;
            font-family: sans-serif;
        }
        .main{
            height: 100vh;
            width: 85%;
            margin-left: 15%;
            
        }
        table{
            border: 1px solid #ddd;
            width: 100%;
            background-color: white;
            border-collapse: collapse;
            margin-top: 6px;
        }
        table th{
            border: 1px solid #ddd;
            background-color: #f2f2f2;
            text-align: center;
            padding: 10px;
        }
        table td{
            border: 1px solid #ddd;
            height: 50px;
            text-align: center;
            padding: 10px;
            color: gray;

        }
        table td button{
            height: 40px;
            width: 40px;
            background: none;
            font-size: larger;
            border: none;
            cursor: pointer;
        }
        .fa-trash-can{
            color: orangered;
        }
        .fa-pencil{
            color: gray;
        }
        table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .section{
            height: 30px;
            width: 40%;
            background-color: #f9f9f9;
            margin-left: 30%;
            border-radius: 20px;
            border: 2px solid #ddd;
            text-align: center;
            font-size: large;
            padding-top:10px ;
            color: gray;
        }
        .section span{
            font-weight: bolder;
            color: black;
        }

    </style>
    <%- include("layouts/header") -%>

</head>
<body>
    <%- include('layouts/sidebar') -%>

    <div class="main">
        <div class="section"> Total <span><%= productcount %> </span> products</div>
        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Prize â‚¹</th>
                    <th>Offer prize %</th>
                    <th>Stock</th>
                    <th>Edit</th>
                    <th>Delete</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% productdata.forEach((data)=>{ %>
                <tr>
                    <td><img style="width: 100px; height: 100px;" src="/<%= data.image[0] %>" alt="" ></td>
                    <td><%= data.name %></td>
                    <td><%= data.category %></td>
                    <td><%= data.prize %></td>
                    <td><%= data.offerprize %></td>
                    <td><%= data.stock %></td>
                    <td><button onclick="window.location.href='/admin/toedit/<%= data._id %>'" ><i class="fa-solid fa-pencil"></i></button></td>
                    <td><button id="button1" onclick="confirmDelete('/admin/todelete/<%= data._id %>')"><i class="fa-solid fa-trash-can"></i></button></td>
                    <td><button onclick="window.location.href='/admin/status/<%= data._id %>'"><% if (data.status === 'Active'){ %>
                        <i class="fa-regular fa-circle-check" style="color: #4bee2b;"></i>
                   <% }else { %>
                    <i class="fa-regular fa-circle-xmark" style="color: #fe0613;"></i>
                    <% } %></button></td>
                    
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
    <script>   
    function confirmDelete(deleteUrl) {
        if (confirm("Are you sure you want to delete this product?")) {
            window.location.href = deleteUrl;
        }
    }
    </script>
</body>
</html>