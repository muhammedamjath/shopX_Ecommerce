<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ShopX</title>
    <style>
      * {
        margin: 0;
        padding: 0;
      }
      .container {
        width: 100%;
        height: 100vh;
        /* overflow: hidden; */
        overflow-x: hidden;
      }
      .id {
        height: 40px;
        width: 30%;
        background: white;
        position: relative;
        top: 50px;
        left: 40%;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .box3 {
        display: flex;
        gap: 2%;
        position: relative;
        top: 100px;
        left: 25%;
      }
      .box3 .one,
      .two,
      .three {
        height: 200px;
        width: 300px;
        background-color: white;
        border-radius: 5px;
      }
      .box3 .flex,
      .two .flex,
      .three .flex {
        margin-top: 0px;
      }
      .box3 .one .flex .icon,
      .two .flex .icon,
      .three .flex .icon {
        height: 65px;
        width: 30%;
        display: flex;
        align-items: center;
        justify-content: center;
        /* background-color: green; */
        font-size: 20px;
      }
      .box3 .one .flex .icon {
        color: blue;
      }
      .box3 .two .flex .icon {
        color: orangered;
      }
      .box3 .three .flex .icon {
        color: green;
      }
      .box3 .one .flex p,
      .two .flex p,
      .three .flex p {
        height: 65px;
        width: 70%;
        display: flex;
        align-items: center;
        font-size: 20px;
      }
      .box3 .one .flex,
      .two .flex,
      .three .flex {
        display: flex;
      }
      .box3 .one .p,
      .two .p,
      .three .p {
        height: 135px;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5px;
        font-size: 13px;
        justify-content: center;
      }
      .product {
        height: 100px;
        width: 60%;
        background-color: #fff;
        border: 1px solid gray;
        border-radius: 5px;
        position: relative;
        top: 150px;
        left: 25%;
        display: flex;
        align-items: center;
        gap: 5%;
        padding: 20px;
      }
      .product .img {
        height: 100%;
        width: 15%;
        background-color: red;
      }
      .product .img img {
        height: 100%;
        width: 100%;
      }
      .product div {
        height: 30%;
        width: 20%;
        /* background-color: red; */
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
      }
      .status {
        height: 50px;
        width: 20%;
        background-color: white;
        position: relative;
        top: 130px;
        left: 67.5%;
        display: flex;
        align-items: center;
        gap: 10px;
        border-radius: 5px;
      }
      .status p {
        margin-left: 20%;
      }
    </style>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <%- include("layouts/header") -%>
  </head>
  <body>
    <%- include('layouts/sidebar') -%>
    <div class="container">
      <div class="id">Order ID : <%= objdata._id %></div>
      <input id="userId" type="hidden" value="<%= userId %>" />
      <input type="hidden" id="orderId" value="<%= objdata._id %>" />
      <div class="box3">
        <div class="one">
          <div class="flex">
            <div class="icon"><i class="fa-solid fa-user"></i></div>
            <p>User Detailes</p>
          </div>
          <div class="p">
            <p><%= userDetailes.username %></p>
            <p><%= userDetailes.email %></p>
            <p><%= userDetailes.mobno %></p>
          </div>
        </div>
        <div class="two">
          <div class="flex">
            <div class="icon"><i class="fa-solid fa-truck"></i></div>
            <p>Order info</p>
          </div>
          <div class="p">
            <p><%= objdata.peymentMethord %></p>
            <p>₹ <%= objdata.totalAmount %></p>
            <p id="status" style="font-weight: bolder">
              <%= objdata.orderSatatus %>
            </p>
          </div>
        </div>
        <div class="three">
          <div class="flex">
            <div class="icon"><i class="fa-solid fa-location-dot"></i></div>
            <p>Shipping address</p>
          </div>
          <div class="p">
            <p><%= objdata.house %></p>
            <p><%= objdata.pincode %></p>
            <p><%= objdata.district %></p>
            <p><%= objdata.state %></p>
            <p><%= objdata.mobno %></p>
          </div>
        </div>
      </div>
      <div class="status">
        <p>update the status</p>
        <select name="" id="select">
            <option id="newstatus" value="<%= objdata.orderSatatus %>"><%= objdata.orderSatatus %></option>
          <option value="placed">Placed</option>
          <option value="shipped">Shipped</option>
          <option value="deliverd">Deliverd</option>
        </select>
      </div>
      <% product.forEach((data)=>{ %>
      <div class="product">
        <div class="img"><img src="/<%= data.image %>" alt="" /></div>
        <div>₹ <%= data.otherDetailes.offerprice %></div>
        <div><%= data.otherDetailes.count %></div>
      </div>
      <% })%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <script src="/js/orderSingle.js"></script>
  </body>
</html>
