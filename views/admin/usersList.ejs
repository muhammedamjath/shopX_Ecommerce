<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users list</title><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        *{
            margin: 0;
            padding: 0;
            font-family: sans-serif;

        }
        .main{
            height: 100vh;
            width: 85%;
            position: absolute;
            left: 15%;
            background-color:  rgb(231, 237, 240);
            z-index: -1;
        }
        .main h1{
            text-align: center;
            padding-top: 10px;
            font-size: 25px;
            font-weight: bolder;
        }
        .main p{
            margin-left: 5%;
            color: gray;
            font-size: 15px;
        }
        .main span{
            font-weight: bolder;
            color: black;
        }
        .table {
            width: 90%;
            margin-left: 5%;
            border-collapse: collapse;
            border: 1px solid #ddd;
            background-color: white;
        }

        
        .table th {
            background-color: #f2f2f2;
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

      
        .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
            color: gray;
        }

    
        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .fa-user{
            color: blue;
        }
        td button{
            background: none;
            height: 20px;
            width: 80px;
            border: none;
            color: green;
            font-weight: bolder;
        }
        td button:hover{
            transform: scale(1.1);
        }
        
    </style>
    <%- include("layouts/header") -%>

</head>
<body>
    <%- include('layouts/sidebar') -%>

    <div class="main">
        <h1>List of Users</h1>
        <p class="count">Total number of users :  <span>#<%= usersCount %></span></p>
        <table class="table">
            <thead >
                <tr class="thead">
                    <th></th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile Number</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                    <% userlistdata.forEach((data)=>{ %>
                    <tr>
                        <td><i class="fa-regular fa-user"></i></td>
                        <td><%= data.username %></td>
                        <td><%= data.email %></td>
                        <td><%=  data.mobno %></td>
                        <td><button class="button1"  onclick="window.location.href='/admin/changeStatus/<%= data._id %>'"><%= data.status %></button></td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    <script>
       const buttons = document.querySelectorAll('.button1');
        buttons.forEach(button => {
            if (button.innerText === 'Blocked') {
                button.style.color = 'red';
            }
        });
    </script>
</body>
</html>